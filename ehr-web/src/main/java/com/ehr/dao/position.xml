<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.ehr.dao.PositionDAO">

	<sql id="selectColumns">
		id,SITE_ID,ORG_ID,NAME,POSITION_CODE,STATUS,CREATE_BY,CREATE_DATE,UPDATE_BY,UPDATE_DATE
	</sql>
	

	<sql id="insertColumns">
		SITE_ID,ORG_ID,NAME,POSITION_CODE,STATUS,CREATE_BY,CREATE_DATE,UPDATE_BY,UPDATE_DATE
	</sql>

	<insert id="insert" useGeneratedKeys="true" keyProperty="id">
		INSERT INTO POSITION (
		<include refid="insertColumns" />
		)
		VALUES (
		#{siteId},
		#{orgId},
		#{name},
		#{positionCode},
		#{status},
		#{createdBy},
		#{createDate},
		#{lastUpdateBy},
		#{lastUpdateDate}
		 
		)
	</insert>
	 
	<select id="getPositionList" parameterType="java.util.Map" resultType="com.ehr.model.PositionDO">
        SELECT
        <include refid="selectColumns" />
        FROM POSITION
        <where> 
            <if test="id != null"> id = #{id}</if>
            <if test="siteId != null">and SITE_ID = #{siteId}</if>
            <if test="orgId != null"> and ORG_ID = #{orgId}</if>
            <if test="status != null"> and STATUS = #{status}</if>
        </where>        
    </select>
    
    <update id="update" parameterType="com.ehr.model.PositionDO">
		UPDATE POSITION
		<set>
			UPDATE_DATE = now(),UPDATE_BY=#{updateBy}
			 <if test="siteId != null"> ,SITE_ID = #{siteId}</if>
            <if test="orgId != null"> ,ORG_ID = #{orgId}</if>
            <if test="status != null"> ,STATUS = #{status}</if>
			<if test="name != null"> , NAME = #{name} </if>
		</set>
		WHERE id=#{id} 
	</update>
    
</mapper>
