<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.ehr.dao.SiteDAO">

	<sql id="selectColumns">
		id,PARENT_ID,NAME,STATUS,SITE_TYPE,CUSTOM_THEME_ID,CREATE_BY,CREATE_DATE,UPDATE_BY,UPDATE_DATE
	</sql>
	

	<sql id="insertColumns">
		PARENT_ID,NAME,STATUS,SITE_TYPE,CUSTOM_THEME_ID,CREATE_BY,CREATE_DATE,UPDATE_BY,UPDATE_DATE
	</sql>

	<insert id="insert" useGeneratedKeys="true" keyProperty="id">
		INSERT INTO site (
		<include refid="insertColumns" />
		)
		VALUES (
		#{parentId},
		#{name},
		#{status},
		#{siteType},
		#{costomThemeId},
		#{createBy},
		#{createDate},
		#{updateBy},
		#{updateDate}
		 
		)
	</insert>
	 
	<select id="getSiteList" parameterType="java.util.Map" resultType="com.ehr.model.SiteDO">
        SELECT
        <include refid="selectColumns" />
        FROM site
        <where> 
            <if test="id != null"> id = #{id}</if>
			<if test="name != null"> and NAME = #{name}</if>
            <if test="parentId != null"> and PARENT_ID = #{parentId}</if>
            <if test="status != null"> and STATUS = #{status}</if>
			<if test="siteType != null"> and SITE_TYPE = #{siteType}</if>
        </where>        
    </select>
    
    <update id="update" parameterType="com.ehr.model.SiteDO">
		UPDATE site
		<set>
			 UPDATE_DATE = now(),UPDATE_BY=#{updateBy}
			<if test="name != null"> , NAME = #{name} </if>
			<if test="status != null"> , STATUS = #{status} </if>
			<if test="customThemeId != null"> , CUSTOM_THEME_ID = #{customThemeId} </if>
		</set>
		WHERE id=#{id} 
	</update>
    
    
    
    
	<insert id="createTable" parameterType="string">
	CREATE TABLE `test` (
  `id` bigint(20) NOT NULL AUTO_INCREMENT,
  `name` varchar(100) NOT NULL,
  PRIMARY KEY (`id`)
) ENGINE=InnoDB AUTO_INCREMENT=1 DEFAULT CHARSET=utf8
	</insert>
	
	<select id="getTest"  resultType="string">
        SELECT
        name
        FROM test
    </select>
</mapper>
